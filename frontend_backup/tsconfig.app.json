{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": [
      "vite/client",
      // Vitest のユーティリティ（vi, Mock, MockedFunction など）の型を補完するため
      "vitest",
      // Vitest のグローバル関数（describe, it, expect など）を import なしで使うため
      "vitest/globals"
    ],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "allowJs": false, // JS ファイルはプロジェクトに含めない
    "checkJs": false, // JS ファイルはチェックしない（allowJs が false なので無意味だが明示）
    "noImplicitAny": true, // 型が不明な値は暗黙の any を禁止

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "resolveJsonModule": true, // JSON ファイルを import できるようにする設定
    "esModuleInterop": true // CommonJS モジュールを default import 形式で扱えるようにする設定
  },
  "include": ["src"]
}
